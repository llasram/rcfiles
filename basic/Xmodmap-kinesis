! Clear all modifier keys
clear lock
clear control
clear mod1
clear mod4
clear mod5

! Right thumb switches
keysym Super_R = Alt_R
keysym Control_R = Super_R
keysym Alt_R = Super_R

! Left thumb switches
keysym BackSpace = Control_L
keysym Delete = Meta_L
keysym Control_L = Super_L
keysym Alt_L = Control_R
keysym Home = BackSpace
keysym End = Delete

! More typical Dvorak
keysym backslash = minus underscore
keysym minus = backslash bar
keysym equal = grave asciitilde
keycode 94 = equal plus

! Twiddle > grave
! keysym grave = asciitilde grave

add Control = Control_L Control_R
add mod1 = Meta_L Alt_L
add mod4 = Super_L Super_R 
add mod5 = Hyper_R
